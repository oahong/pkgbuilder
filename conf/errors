declare -Ar ERROR=(
    [EDEPS]=1       # dependency error
    [EOPTS]=2       # command option error
    [EACCESS]=3     # file access error
    [EPERM]=4       # permission error
    [EPACKAGE]=5    # missing package
    [EARCH]=6       # architecture not supported
    [EBUILD]=7      # build failed
    [EINDEP]=8      # Import the architecture indepent package!
    [EMISC]=20      # undefined error
)

